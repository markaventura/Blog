<h1>Our Blog</h1>

<% @posts.each do |post| %>
	<h1><%= link_to post.title, post %>sds</h2>
	<p><%= post.content %></p>
	<p><%= link_to "Edit", edit_post_path(post) %>
	<p><%= link_to "Delete", post, :confirm => "Are you sure?", :method => :delete %>
	<hr />
<% end %>

<p><%= link_to "Add New Post", new_post_path %></p>